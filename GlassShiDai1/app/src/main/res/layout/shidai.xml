<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill" >
<ImageView
        android:id="@+id/tupain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/beijin" 
         />

<ImageView
    android:id="@+id/tupain1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="230dp" />
    <ImageView
    android:id="@+id/tupain2"
    android:layout_width="match_parent"
    android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
 />
    <com.example.wangluomokuai.MyHorizontalScrollView
        android:id="@+id/id_horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
           android:layout_alignParentBottom="true"
        android:background="#000000"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/id_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                 
            android:orientation="horizontal" >
        </LinearLayout>
    </com.example.wangluomokuai.MyHorizontalScrollView>
     

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tupain2"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:text="重拍" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:text="详情" />

    <Button
        android:text="收藏"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button1"
        android:id="@+id/shoucangBT" />

</RelativeLayout>
