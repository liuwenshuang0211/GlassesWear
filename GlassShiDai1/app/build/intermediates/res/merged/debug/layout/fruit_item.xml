<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="161dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"     
       />
  <ImageView
        android:id="@+id/image2"
        android:layout_width="161dp"
        android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
        android:layout_alignLeft="@+id/image"
        android:layout_below="@+id/image"
        android:layout_marginLeft="3dp"
        android:background="#000000"
     />
   
    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
       android:layout_above="@+id/text1"
         />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@+id/image2"
        android:layout_centerHorizontal="true"
        android:text="NOVA"
        android:textSize="12dp" />
<ImageButton
        android:id="@+id/imageBT2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/image2"
        android:layout_alignTop="@+id/image2"
         android:layout_marginRight="40dp"
        android:src="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
         android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/image2"
        android:layout_alignTop="@+id/image2"
        android:src="@android:drawable/star_on" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
           android:layout_marginLeft="5dp"
        android:layout_alignLeft="@+id/image2"
        android:layout_alignTop="@+id/image2"
        android:src="@android:drawable/stat_notify_voicemail" />

    <ImageButton
        android:src="@android:drawable/btn_dialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/image"
        android:layout_alignRight="@+id/image2"
        android:layout_alignEnd="@+id/image2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:id="@+id/Deletebt" />

</RelativeLayout>