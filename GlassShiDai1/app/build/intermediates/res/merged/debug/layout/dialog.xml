<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:text="性别："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="23dp"
        android:id="@+id/textView2" />



    <TextView
        android:text="眼镜类型："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:id="@+id/textView3"
        android:textSize="23dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/sex">

        <RadioButton
            android:text="男"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton" />

        <RadioButton
            android:text="女"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"

            />
        </RadioGroup>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leixing"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3">

        <RadioButton
            android:text="光学眼镜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glass" />

        <RadioButton
            android:text="太阳眼镜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunglass"

            />
    </RadioGroup>

    <TextView
        android:text="脸型："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="23dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
      />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lianxing"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        >

        <RadioButton
            android:text="圆型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yuanxing" />

        <RadioButton
            android:text="长型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changxing"
            />
        <RadioButton
            android:text="方型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fangxing"
            />
        <RadioButton
            android:text="椭圆型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tuoyuan"
            />
        <RadioButton
            android:text="三角型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sanjiao"
            />
        <RadioButton
            android:text="瓜子型脸"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guazi"
            />
    </RadioGroup>

    <Button
        android:text="确定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lianxing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/shaixuanBT" />
</RelativeLayout>
